
  <h2><%= @show.title %></h2>
  <h4>Seasons:</h4><p><%= @show.seasons %></p>
  <h4>Channel:</h4> 
  <p><%= @show.channel %></p>
  <% if @show.user == current_user %>
  <p><a href="/shows/<%= @show.id %>/edit">Edit</a></p> <br/>
  <p><a href="/shows/<%= @show.id %>/users">See Users</a></p> <br/>
    
  <form action="/shows/<%= @show.id %>/delete" method="post">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete">
  
  <% else %>
  <p class="wrong"> This is not your show... Sorry but you can't edit or delete it... Oops! </p>
  <% end %> 
  
  